<h1>Create a new Cocktail</h1>

<%= simple_form_for(@cocktail, html: { class: 'form-inline' }) do |f|
 %>
  <% if @cocktail.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @cocktail.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :name %>
  <div class="ingredient-box">
    <%= f.association :ingredients, as: :check_boxes %>
    <%= f.association :doses %>
  </div>



  <%= f.submit "Create", class: "btn btn-primary" %>

  <!-- [...] all the fields -->
<% end %>
